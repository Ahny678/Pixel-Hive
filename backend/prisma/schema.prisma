generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  
  pdfJobs   PdfJob[]  
  videojob  VideoJob[]
  WatermarkJob  WatermarkJob[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model PdfJob {
  id          Int       @id @default(autoincrement())
  userId      Int
  type        String    // "generate" | "merge"
  inputData   Json
  outputUrl   String?
  status      String    @default("pending") // pending | processing | completed | failed
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  errorMsg    String?

  user        User      @relation(fields: [userId], references: [id])
}

model VideoJob {
  id          Int       @id @default(autoincrement())
  userId      Int
  videoUrl    String
  thumbnails  Json?
  timestamps  Json?     // store array of timestamps used
  status      String    @default("pending") // pending | processing | completed | failed
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  errorMsg    String?

  user        User      @relation(fields: [userId], references: [id])
}
model WatermarkJob {
  id        Int      @id @default(autoincrement())
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    JobStatus @default(pending)
  errorMsg  String?
  
  // Input files
  inputFileUrl String
  inputFileType FileType // IMAGE, VIDEO, PDF
  inputLocalPath String?
  
  // Watermark configuration
  watermarkType WatermarkType // TEXT, IMAGE
  textContent   String?       // For text watermarks
  watermarkImageUrl String?   // For image watermarks
  opacity       Float?        // 0.0 - 1.0
  position      String?       // top-left, top-right, center, bottom-left, bottom-right
  fontSize      Int?          // For text watermarks
  
  // Output
  outputFileUrl String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("watermark_jobs")
}

enum JobStatus {
  pending
  processing
  completed
  failed
}

enum FileType {
  IMAGE
  VIDEO
  PDF
}

enum WatermarkType {
  TEXT
  IMAGE
}

